#!/usr/bin/env ruby

require 'bundler/setup'
require 'job/queue'

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

@redis = Redis.new
@queue = Job::Queue::Queue.new('my-queue', @redis)
@serial_worker = Job::Queue::Workers::SerialWorker.new(@queue, Job::Queue::ErrorHandling::RetryErrorHandler.new(3))
@concurrent_worker = Job::Queue::Workers::ConcurrentWorker.new(@queue, Job::Queue::ErrorHandling::RetryErrorHandler.new(3))

class SlowJob
  include Job::Queue::Job

  def run
    puts "SlowJob running with args: #{@args}..."
    sleep 1
    puts 'job done'
  end
end

class BustedTwiceJob
  include Job::Queue::Job

  def initialize(args)
    super
    @runs = 0
  end

  def run
    @runs += 1

    if @runs >= 3
      puts "I'm good!"
      return
    end

    puts "I'm broken"

    raise
  end
end

@job = SlowJob.new(['my', 'args'])
@busted_job = BustedTwiceJob.new([])

# (If you use this, don't forget to add pry to your Gemfile!)
# require "pry"
# Pry.start

require 'irb'
IRB.start(__FILE__)
